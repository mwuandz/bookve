{
  "rules": {
    "rooms": {
      "$room": {
        "seats": {
          "$seatId": {
            ".read": true,
            // Cho phép: tạo ghế mới hoặc cập nhật nếu cùng userId (không cướp ghế)
            ".write": "!data.exists() || data.child('userId').val() === newData.child('userId').val()",
            ".validate": "newData.hasChildren(['userId','name','ts'])"
          }
        },
        "claims": {
          "$userId": {
            ".read": true,
            ".write": true
          }
        }
      }
    }
  }
}